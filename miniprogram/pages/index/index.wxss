/**index.wxss**/
/**颜色搭配推荐面板**/
.colorShow{
  background-color: white;
  box-shadow: 2px 5px 5px gainsboro;
  height: 430px;
  margin: auto 10px;
  border-radius: 2%;
}
/**------------------------------------------------**/
/**颜色面板**/
.color{
  height: 330px;
  margin: 15px;
  border-radius: 2%;
}
.color_mainItem{
  height: 130px;
}
.color_subItem1{
  height: 80px;
}
.color_subItem2{
  height: 65px;
}
.color_subItem3{
  height: 55px;
}
.selectedItem{
  transform: scale3d(1,1,1);
  box-shadow: 5px 5px 5px gainsboro;
}
.ItemText{
  background-color: gainsboro;
  opacity: 0.8;
  color: black;
  font-family: Arial, Helvetica, sans-serif;
  width: 65px;
  bottom: 20px;
}
/**------------------------------------------------**/
/**按钮面板**/
.button{
  display: flex;
  margin: 20px 15px;
  justify-content: space-between;
}
.mark_box{
  border: 1px solid gainsboro;
  border-radius: 10%;
  display: flex;
  padding: 5px 10px;
  align-items: center;
}
.mark_icon{
  margin-right: 5px;
}
.mark_text{
  font-size: 20px;
  font-family: Arial, Helvetica, sans-serif;
}
/**------------------------------------------------**/
/**------------------------------------------------**/
/**调色面板**/
.colorShift{
  background-color: white;
  box-shadow: 2px 5px 5px gainsboro;
  height: 200px;
  margin: 20px 10px;
  border-radius: 2%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.shiftItem{
  display: flex;
  justify-content: space-between;
  margin: 10px;
}
slider{
  width: 70%;
}